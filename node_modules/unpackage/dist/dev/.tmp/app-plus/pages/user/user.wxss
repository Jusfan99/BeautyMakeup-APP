.user {
  width: 100%;
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.user .user-box {
    width: 92%;
    height: 300rpx;
    overflow: hidden;
    background-color: #F06365;
    border-radius: 20rpx;
    box-shadow: 0rpx 8rpx 25rpx rgba(0, 0, 0, 0.2);
    position: relative;
}
.user .user-box .left {
      width: 180rpx;
      height: 180rpx;
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
      margin-top: 60rpx;
      margin-left: 8%;
      box-shadow: 0rpx 8rpx 25rpx rgba(0, 0, 0, 0.2);
      border-radius: 100%;
}
.user .user-box .left image {
        width: 180rpx;
        height: 180rpx;
        border-radius: 100%;
}
.user .user-box .right {
      width: 100%;
      margin-top: -160rpx;
      margin-left: 45%;
}
.user .user-box .right .username {
        margin-bottom: 35rpx;
        font-size: 40rpx;
        color: #fff;
}
.user .user-box .right .signature {
        color: #eee;
        font-size: 28rpx;
}
.user .user-box .right .getbutton {
        border: none;
        color: #F06365;
        width: 300rpx;
        border-radius: 50rpx;
        background-color: #FFFFFF;
        box-shadow: 0rpx 8rpx 25rpx rgba(0, 0, 0, 0.2);
        margin-top: 25rpx;
        margin-left: 0rpx;
}
.userlist {
  width: 100%;
  margin-top: 20rpx;
